<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmployeeProductivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textViewStyle">@style/RobotoTextView</item>
        <item name="android:buttonStyle">@style/RobotoButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RobotoBoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <style name="RobotoLightTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="RobotoMediumTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RobotoHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RobotoSubHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757576</item>
    </style>


    <style name="RobotoTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SegoeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/segoe_ui</item>
    </style>

    <style name="SegoeButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/segoe_ui</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">7dp</item>
    </style>

</resources>