<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingBottom="12dp"
    android:paddingHorizontal="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Employee"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <EditText
            android:lines="1"
            android:layout_marginTop="20dp"
            android:id="@+id/input_fn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAlignment="center"
            android:hint="First Name" />
        <EditText
            android:layout_marginTop="12dp"
            android:lines="1"
            android:id="@+id/input_ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAlignment="center"
            android:hint="Last Name" />
        <EditText
            android:layout_marginTop="12dp"
            android:lines="1"
            android:id="@+id/input_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="14sp"
            android:textAlignment="center"
            android:hint="Age (15 - 60 Years Old)" />
        <EditText
            android:lines="1"
            android:id="@+id/input_monthly_inc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="number"
            android:textSize="14sp"
            android:textAlignment="center"
            android:hint="Monthly Income (5000 - 200000 PHP)"/>
        <EditText
            android:visibility="gone"
            android:lines="1"
            android:id="@+id/input_stocks_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="40dp"
            android:inputType="number"
            android:textSize="14sp"
            android:hint="Stocks Sold" />
        <RadioGroup
            android:layout_marginTop="32dp"
            android:id="@+id/rg_marital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marital Status"/>
            <RadioButton
                android:id="@+id/rb_single"
                android:text="Single"
                android:fontFamily="@font/segoe_ui_bold_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rb_married"
                android:text="Married"
                android:fontFamily="@font/segoe_ui_bold_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rb_divorced"
                android:text="Divorced"
                android:fontFamily="@font/segoe_ui_bold_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"/>
            <RadioButton
                android:id="@+id/rb_male"
                android:text="Male"
                android:fontFamily="@font/segoe_ui_bold_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rb_female"
                android:text="Female"
                android:fontFamily="@font/segoe_ui_bold_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/rg_department"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"/>
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="invisible"
                android:id="@+id/btn_cancel"
                android:background="@drawable/outlined_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:minHeight="0dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textSize="12sp"
                android:text="Cancel" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:background="@drawable/outlined_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textSize="12sp"
                android:text="Add" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>